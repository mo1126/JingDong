<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.stx.xhb.xbanner.XBanner
            android:id="@+id/spbanner"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:isAutoPlay="false"

            ></com.stx.xhb.xbanner.XBanner>

        <TextView
            android:id="@+id/sp_title"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:layout_below="@+id/spbanner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:maxLines="2"
            android:ellipsize="end"

            />
        <TextView
            android:id="@+id/sp_miaoshu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp_title"
            android:layout_alignLeft="@+id/sp_title"
            android:layout_alignStart="@+id/sp_title"
            android:textColor="@color/red"
            android:text="描述"
            android:maxLines="2"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/sp_price"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="¥ "
            android:textSize="20sp"
            android:layout_below="@+id/sp_miaoshu"
            android:layout_alignLeft="@+id/sp_miaoshu"
            android:layout_alignStart="@+id/sp_miaoshu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/sp_price"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:text="降价通知"/>
    </RelativeLayout>
</ScrollView>


</RelativeLayout>